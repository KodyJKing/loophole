{
    "name": "loophole",
    "version": "0.0.0",
    "repository": "https://github.com/KodyJKing/loophole.git",
    "author": "Kody King <kody.j.king@gmail.com>",
    "license": "none",
    "scripts": {
        "dev": "yarn install && yarn build && yarn link geode",
        "build": "tsc && yarn buildpeg",
        "buildpeg": "pegjs -o src/vm/assemblyParser.js src/vm/assemblyParser.pegjs",
        "watch:compile": "tsc -w",
        "watch:watchpeg": "nodemon --watch src/vm -e pegjs -x yarn buildpeg",
        "watch:webpack": "webpack serve --mode=development",
        "watch": "npm-run-all --parallel watch:*",
        "w": "npm-run-all --parallel watch:*",
        "test": "ava --watch --verbose"
    },
    "private": true,
    "devDependencies": {
        "ava": "^3.15.0",
        "npm-run-all": "^4.1.5",
        "pegjs": "^0.10.0",
        "webpack": "^5.47.1",
        "webpack-cli": "^4.7.2",
        "webpack-dev-server": "^3.11.2"
    },
    "dependencies": {
        "geode": "https://github.com/KodyJKing/geode.git#1.0.0"
    }
}